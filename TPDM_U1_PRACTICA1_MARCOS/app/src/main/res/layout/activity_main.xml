<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:hint="Escriba un mensaje"
        android:id="@+id/texto_entrada"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Mostrar mensaje"
        android:layout_marginVertical="10dp"
        android:background="#8B0000"
        android:textColor="#FFFFFF"
        android:id="@+id/boton"
        android:onClick="mensajeBoton"
        />
    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SelecciÃ³name para poder mostrar el mensaje"
        android:textSize="20dp"
        android:id="@+id/confirmacion"
        android:onClick="notificacionCheck"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/texto_salida"
        android:layout_marginVertical="10dp"
        android:background="#CCCCCC"
        />
    <ToggleButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textOn="IMAGEN"
        android:textOff="OCULTO"
        android:id="@+id/boton2"
        android:onClick="MostrarImg"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imagen"
        android:layout_marginTop="10dp"
        />

</LinearLayout>